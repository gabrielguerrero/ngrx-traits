{
  "name": "ngrx-traits-signals",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ngrx-traits/signals/src",
  "prefix": "lib",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build-package": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ngrx-traits/signals/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ngrx-traits/signals/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ngrx-traits/signals/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run ngrx-traits-signals:build-package",
          "nx run ngrx-traits-signals:build-migrations",
          "nx run ngrx-traits-signals:build-schematics",
          "nx run ngrx-traits-signals:copy-schematic-assets"
        ],
        "parallel": false
      }
    },
    "build-migrations": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tools/tsconfig.migration.json"
      }
    },
    "build-schematics": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tools/tsconfig.schematics.json"
      }
    },
    "copy-schematic-assets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p dist/libs/ngrx-traits/signals/migrations && cp libs/ngrx-traits/signals/src/migrations/migration-collection.json dist/libs/ngrx-traits/signals/migrations/",
          "mkdir -p dist/libs/ngrx-traits/signals/schematics && cp libs/ngrx-traits/signals/schematics/collection.json dist/libs/ngrx-traits/signals/schematics/",
          "mkdir -p dist/libs/ngrx-traits/signals/schematics/rename-collection && cp libs/ngrx-traits/signals/schematics/rename-collection/schema.json dist/libs/ngrx-traits/signals/schematics/rename-collection/",
          "echo '{\"type\":\"commonjs\"}' > dist/libs/ngrx-traits/signals/migrations/package.json",
          "echo '{\"type\":\"commonjs\"}' > dist/libs/ngrx-traits/signals/schematics/package.json",
          "echo '' >> dist/libs/ngrx-traits/signals/.npmignore",
          "echo '!schematics/package.json' >> dist/libs/ngrx-traits/signals/.npmignore",
          "echo '!migrations/package.json' >> dist/libs/ngrx-traits/signals/.npmignore"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@analogjs/vitest-angular:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npm version {args.versionNumber} && npm publish --access public --tag {args.tag} --provenance --verbose",
            "forwardAllArgs": false
          }
        ],
        "cwd": "dist/libs/ngrx-traits/signals"
      }
    },
    "api-docs": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "jsdoc2md --files ./src/lib/*.ts --files ./src/lib/**/*.ts --configure ../../../jsdoc2md.json --no-cache > ./api-docs.md",
            "forwardAllArgs": false
          }
        ],
        "cwd": "libs/ngrx-traits/signals"
      }
    }
  }
}
