{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngrx-traits/common": ["libs/ngrx-traits/common/src/lib/index.ts"],
      "@ngrx-traits/core": ["libs/ngrx-traits/core/src/lib/index.ts"],
      "@ngrx-traits/core/testing": ["libs/ngrx-traits/core/src/lib/index.ts"],
      "@ngrx-traits/signals": ["libs/ngrx-traits/signals/src/index.ts"],
      "@example-api/shared/*": ["apps/example-api/src/shared/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
